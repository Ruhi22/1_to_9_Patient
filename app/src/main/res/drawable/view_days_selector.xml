<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true" android:drawable="@drawable/ic_color_circle"/>
    <item android:state_pressed="true" android:drawable="@drawable/ic_color_circle"/>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/>
            <solid android:color="@color/grey_op_70"/>
            <stroke android:color="@color/grey_transparent" android:width="1dp"/>
        </shape>
    </item>

</selector>